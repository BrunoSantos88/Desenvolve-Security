Vagrant.configure("2") do |config|
    config.vm.box = "kalilinux/rolling"
    config.vm.hostname = "servidor-nginx"
    
    config.vm.network "public_network", bridge: "TP-Link Wireless USB Adapter", :ip => "192.168.15.6"
    config.vm.network "forwarded_port", guest: 22, host: 2222
    config.vm.network "forwarded_port", guest: 80, host: 8080
    config.vm.network "forwarded_port", guest: 3389, host: 3389
    
    
    config.vm.provider "virtualbox" do |vb|
      vb.memory = "4048"
      vb.cpus = 2
    end
    
    # Aprovisionamiento con script para instalar el servidor RDP (xrdp) y otras herramientas
  config.vm.provision "shell", inline: <<-SHELL
  sudo apt update
  sudo apt install -y xrdp
  sudo systemctl enable xrdp
  sudo systemctl start xrdp
  sudo apt install -y kali-linux-large
SHELL
end